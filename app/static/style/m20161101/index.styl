@import "../common.styl";
@import "../iconfont";

@font-face {
  $font-face(iconfont, '../iconfont/iconfont');
}
.iconfont {
  font-family: 'iconfont' !important;
  font-weight: 400;
  font-style: normal;
  font-variant: normal;
  line-height: 1;
  text-transform: none;
  speak: none;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-close:before{
  content: "\e604";
}

body{
  background #e4e4e4
}

.viewport{
  height 100%;
  overflow auto;
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
}

.banner{
  img {
    display: block;
    width 100%;
  }
}
.container{
  padding: 0 .4rem;
  .title{
    margin .4rem 0 .2rem;
    position relative;
    height .46rem;
    color #8c6074;
    font-size .3rem;
    line-height .46rem;
    text-align center;
    &:after {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      width: 100%;
      height: 0.02rem;
      background-color: #8c6074;
    }
    span {
      position: relative;
      z-index: 2;
      padding 0 .18rem;
      background-color #e4e4e4;
      font-weight: bold;
    }
  }
  .link{
    text-align center;
    line-height .48rem;
    font-size .22rem;
    a {
      color #8c6074;
    }
  }
  .btn{
    display block;
    width 3.6rem
    height .78rem;
    margin .4rem auto .34rem;
    line-height @height;
    text-align center;
    font-size .36rem;
    color #e4e4e4;
    background-color #8c6074;
    border-radius .04rem;
    box-shadow inset 0 0.05rem 0 #ad7f93, 0 0.05rem 0 #745462;
  }
}

.content{
  margin-bottom .25rem;
  font-size .24rem;
  line-height .36rem;
  color #8c6074;

  &.min-font{
    margin-top .05rem;
    font-size .2rem;
    line-height .3rem;
  }
}

.act-table{
  margin-bottom .1rem;
  width 100%;
  border 1px solid #b88ba0;
  th,td{
    border 1px solid #b88ba0;
    vertical-align middle;
    text-align center;
  }
  th {
    font-size .22rem;
    line-height .36rem;
    padding .1rem 0;
    color #fff;
    background-color #8c6074;
    font-weight normal;
  }
  td {
    font-size .2rem;
    line-height .36rem;
    padding .1rem 0;
    color #009ca8;
    background-color #fff;
  }
}

.user-cont{
  background-color #fff;
  line-height .78rem;
  text-align center;
  font-size .24rem;
  color #8c6074;
  a{
    color #009ca8
    border-bottom 1px solid;
  }
}

.history-wrap{
  padding: .3rem .4rem;
}

.loading{
  font-size .24rem;
  line-height .36rem;
  text-align center;
  color #8c6074;
}
.tips{
  font-size: .2rem;
  text-align: right;
  line-height: .40rem;
  color: #333;
}