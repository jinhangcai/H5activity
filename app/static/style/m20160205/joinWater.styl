    background-image: url("../../images/m20160205/help-btn.png");
    background-repeat: no-repeat;
    border-radius: 0.4rem;
    background-size: 100%;
    overflow: hidden;
    text-indent: -999px;
    margin: 0 auto;
    margin-bottom .2rem;
  }
  .btn{
    box-sizing border-box;
    display: block;
    width: 2.97rem;
    height: 0.8rem;
    border-radius: 0.4rem;
    margin: 0 auto;
    color #fff;
    font-size .36rem;
    border .03rem solid #fff;
    line-height 0.8rem;
    text-align center;
    margin-bottom .38rem;
  }
  .logo{
    width 1.45rem;
    height .44rem;
    margin 0 auto;
    background url(../../images/m20160205/logo2.png) no-repeat 0 0;
    background-size 100% 100%;
  }
}
.stage .has-peach{
  i {
    opacity 1;
    animation: marker-raise .5s ease-in 1;
    -webkit-animation: marker-raise .5s ease-in 1;
    -webkit-transform-origin: 50% 100%;
    transform-origin: 50% 100%;
  }
}
@keyframes marker-raise {
  from {
      -webkit-transform: scale3d(0,0,1) translate3d(0,0,0);
      transform: scale3d(0,0,1) translate3d(0,0,0);
      opacity 1
  }

  50% {
      -webkit-transform: scale3d(0.9,1.1,1) translate3d(0,-30%,0);
      transform: scale3d(0.9,1.1,1) translate3d(0,-30%,0)
    }

  80% {
      -webkit-transform: scale3d(1.1,.85,1) translate3d(0,0,0);
      transform: scale3d(1.1,.85,1) translate3d(0,0,0)
    }

  to {
      -webkit-transform: scale3d(1,1,1) translate3d(0,0,0);
      transform: scale3d(1,1,1) translate3d(0,0,0)
      opacity 1
  }
}
@keyframes hang {
  from {
      -webkit-transform: rotate(0) skew(0deg,0deg);
      transform: rotate(0) skew(0deg,0deg)
    }
  20%{
      -webkit-transform: rotate(-8deg) skew(0deg,0deg);
      transform: rotate(-8deg) skew(0deg,0deg)
    }
  40%{
    -webkit-transform: rotate(6deg) skew(0deg,0deg);
    transform: rotate(6deg) skew(0deg,0deg)
  }
  60% {
    -webkit-transform: rotate(-4deg) skew(0deg,0deg);
    transform: rotate(-4deg) skew(0deg,0deg)
  }
  80% {
      -webkit-transform: rotate(2deg) skew(0deg,0deg);
      transform: rotate(2deg) skew(0deg,0deg)
    }
  90% {
    -webkit-transform: rotate(0) skew(0deg,0deg);
    transform: rotate(0) skew(0deg,0deg)
  }
  to {
      -webkit-transform: rotate(0) translate3d(0,0,0);
      transform: rotate(0) translate3d(0,0,0)
    }
}
