// 弹窗样式
.ui-dialog-wrap{
  position fixed;
  z-index 20;
  top 0;
  left 0;
  width 100%;
  height 100%;
  background-color rgba(0,0,0,.5);
  .ui-dialog-box{
    $positioncenter();
    position absolute;
    top 50%;
    left 50%;
    box-sizing border-box;
    padding .32rem .36rem;
    width 5.8rem;
    border-radius .14rem;
    max-height 90%;
    background-color #fff;
    .ui-dialog-header{
      padding-top .32rem;
      box-sizing border-box;
    }
    .ui-dialog-close{
      position absolute;
      z-index 3;
      top 0;
      right 0;
      padding .18rem .2rem;
      &:before{
        content '';
        display block
        background url(../../images/m20160205/x-icon.png) no-repeat 0 0;
        background-size .28rem .28rem;
        width .28rem;
        height .28rem;
      }
    }
    .ui-dialog-content{
      box-sizing border-box;
      .prize-cont{
        text-align center;
        .title {
          font-size .26rem;
          color #744e45;
        }
        .peach-send{
          display: inline-block;
          margin: .42rem 0;
          line-height .93rem;
          font-size .36rem;
          font-weight bold;
          color #cf3c29
