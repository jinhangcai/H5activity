@import "../../common.styl";
@import "../../iconfont";
.viewport{
  background #6a2f6d
  .banner{
    width 6.4rem
    position relative
    .banImg{
      width 100%
    }
    .gotohome{
      width 1.33rem
      height .56rem
      left .3rem
      top .3rem
      position absolute
    }
  }
  .main{
    width 5.8rem
    margin 0 auto
    .rates{
      padding-top .35rem
      color #bedd0d
      font-size .24rem
    }
    .time{
      padding-top .2rem
      font-size .24rem
      color #fff
    }
    .Login{
      width 5.8rem
      height .6rem
      line-height .6rem
      text-align center
      margin .3rem auto 0
      background #5d1a5f
      font-size .24rem
      color #fff
      i{
        font-style normal
      }
      span{
        color #c5d20c
        text-decoration underline
      }
    }
    ul{
      overflow hidden
      margin-top .38rem
      li{
        width 2.75rem
        height 2.97rem
        float left
        img{
          width 100%
        }
        div:nth-child(1){
          background #632b68
          width 100%
          height 2rem
        }
        div:nth-child(2){
          font-size .2rem
          color #fff
          text-align center
          padding .18rem 0 .11rem 0
        }
        div:nth-child(3){
          text-align center
          color #bedd0e
          font-size .2rem
        }
      }
      li:nth-child(even){
        margin-right .3rem
      }
      li:nth-child(1){
        width 3.8rem
        margin 0 auto
        float none
      }
    }
   .hint{
     color #bede0e
     font-size .28rem
     padding .7rem 0 .2rem 0
   }
   ol{
     overflow hidden
     li{
       color #fff
       font-size .24rem
       padding-bottom .24rem
       line-height .35rem
     }
   }
  }
}
.footers{
  padding-bottom .2rem;
  background-size 100%;
  .center{
    font-size .18rem;
    line-height .36rem;
    color #fff;
    text-align center;
  }
}