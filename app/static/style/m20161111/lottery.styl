@import "../common.styl";

$clearfix() {
  \*zoom: 1
  &:before,
  &:after{
    display: table
    content: ""
  }
  &:after{
    clear: both
  }
}
body{
  background-color #f283d0;
}

.footer{
  background: none;
  padding: 0 0 .24rem 0;
  margin: .48rem 0 0 0;
  .center{
    color #fff;
  }
}
.viewport{
  background url(../../images/m20161111/lottery/bg.jpg) repeat-y 0 0;
  background-size 100%;
}
.lottery-bg{
  width 100%;
  height: 100%;
  background url(../../images/m20161111/lottery/bg.jpg) repeat-y 0 0;
  background-size 100%;
}
.lottery-inner{
  width 100%;
  min-height 100%;
  background url(../../images/m20161111/lottery/bg2.png) no-repeat 0 bottom;
  background-size 100%;
}
.header{
  position relative;
  box-sizing border-box;
  padding-top .4rem;
  height 3.26rem;
  background url(../../images/m20161111/lottery/banner.png) no-repeat 0 0;
  background-size 100%;
  .go-home{
    position relative;
    display block;
    width 1.3rem;
    height .56rem;
    margin-left .32rem;
    line-height @height;
    text-align center;
    font-size .28rem;
    border-left 0;
    text-indent -9999px;
    overflow hidden
    background url(../../images/m20161111/lottery/back.png) no-repeat 0 0;
    background-size 100%;
  }
  .my-packet{
    position absolute;
    top .45rem;
    right .24rem;
    box-sizing border-box;
    display block;
    width 1.4rem;
    height .46rem;
    line-height @height;
    text-align center;
    background-color #412994;
    color #fff;
    font-size .24rem;
    border-radius .23rem;
  }
}
.stage{
  position relative;
  width 5.8rem;
  padding-top .2rem;
  margin 0 auto;
  background-color #d81f93;
  border .03rem solid #aff8fe;
  border-radius .18rem;
  .un-login{
    box-sizing border-box;
    position absolute;
    top 0;
    left 0;
    width 100%;
    height 100%;
    padding-top 1.6rem;
    background-color rgba(216, 31, 147, .9);
    border-radius .18rem;
    z-index 3
    transform: translateZ(1rem);
    -webkit-transform: translateZ(1rem)
    .login-info{
      margin-bottom .45rem;
      text-align center;
      font-size .28rem;
      line-height .42rem;
      color #fff;
    }
  }
  .title{
    {$public-center-horizontally}
    top -.32rem;
    z-index 4;
    width 4rem;
    height .58rem;
    line-height @height;
    font-size .28rem;
    color #ffe400;
    text-align center;
    background-color #8e35d8;
    border .03rem solid #aff8fe;
    border-radius .18rem;
    -webkit-transform: translate3d(-50%,0px,1rem);
    transform:translate3d(-50%,0px,1rem);
  }
  .opp-num{
    line-height .65rem;
    color #fefefe;
    font-size .36rem;
    text-align center;
  }
  .info{
    font-size .22rem;
    line-height .28rem;
    text-align center;
    color #fefefe;
  }
  .high-light{
    color #ffe400;
  }
  .lottery-list{
    $clearfix();
    padding .3rem .12rem 0;
    li {
      float left;
      width 1.29rem;
      margin 0 .28rem .31rem;
      transform: translateZ(.65rem);
      -webkit-transform: translateZ(.65rem);
      position relative
      z-index 2
    }
    .open .lottery-item{
      transform: rotateY(900deg);
      -webkit-transform: rotateY(900deg);
    }
    .lottery-item{
      position relative;
      width 1.29rem;
      height 1.69rem;

      transform-style: preserve-3d;
      -webkit-transform-style: preserve-3d;

      transform: rotateY(0deg);
      -webkit-transform: rotateY(0deg);

      transition: transform 2s cubic-bezier(0.69, 0.18, 0.38, 0.89);
      -webkit-transition: -webkit-transform 2s cubic-bezier(0.69, 0.18, 0.38, 0.89);

      transform-origin: center 0 0px;
      -webkit-transform-origin: center 0 0px;
    }
    .lottery-negative{
      position absolute;
      width 1.29rem;
      height 1.69rem;
      background url(../../images/m20161111/lottery/negative.png) no-repeat 0 0;
      background-size 100% 100%;

      transform: rotateY(0deg);
      -webkit-transform: rotateY(0deg);

      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;
    }
    .lottery-positive{

      position absolute;
      width 1.29rem;
      height 1.69rem;
      background url(../../images/m20161111/lottery/positive.png) no-repeat 0 0;
      background-size 100% 100%;

      transform: rotateY(180deg);
      -webkit-transform: rotateY(180deg);

      backface-visibility: hidden;
      -webkit-backface-visibility: hidden;

      display: flex;
      align-items:center;
      p {
        width 100%;
        text-align center;
        font-size .26rem;
        line-height .3rem;
        color #e51f6a;
      }
    }
  }
}
.pop-rule{
  transform: translateZ(1rem);
  -webkit-transform: translateZ(1rem);
  z-index 10;
}
#loadPage{
  transform: translateZ(1.1rem);
  -webkit-transform: translateZ(1.1rem);
}
#shareMask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .8) url("../../images/m20161111/pk/share-mask.png") no-repeat 3rem .3rem;
  background-size: 2.95rem auto;
}