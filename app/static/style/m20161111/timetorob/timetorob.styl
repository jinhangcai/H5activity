@import "../../common.styl";
@import "../../iconfont";
.viewport{
  .de-bg{
    background url("../../../images/m20161111/timetorob/bgcolor.jpg") repeat-y 0 0
    background-size 100%
    position relative
    .top{
      width 5.8rem
      margin 0 auto
      overflow  hidden
      padding-top .4rem
      .gotoroom{
        float left
        width 1.33rem
        height .56rem
        img{
          width 100%
        }
      }
      .myred{
        float right
        width 1.39rem
        height .46rem
        border-radius .23rem
        color #fff
        font-size .24rem
        margin-top .05rem
        background #412994
        text-align center
        line-height .46rem
      }
    }
    .main{
      width 5.14rem
      border 3px solid #15dba8
      margin 0 auto
      margin-top .84rem
      position relative
      background #280d74
      z-index 2
      .coke{
        width 4.4rem
        text-align right
        font-size .18rem
        color #fff
        margin .06rem auto 0
      }
      .headline{
        font-size .32rem
        width 2.74rem
        height .84rem
        color #15dba8
        line-height .9rem
        margin 0 auto
        text-align center
        border 3px solid #15dba8
        margin-top -.45rem
        background #280d74
        position relative
        z-index 2
        img{
          position absolute
          width .5rem
          height .53rem
          right -.23rem
          top -.23rem
        }
      }
      .time{
        width 100%
        margin-top .45rem
        overflow hidden
        .timedate{
          width 5.12rem
          margin 0 auto
          overflow hidden
          span{
            width 1.28rem
            float left
            font-size .18rem
            color #fff
            text-align center
          }
        }
        .timedateIn{
          span{
            font-size .18rem
          }
        }
        .line{
          width 4.1rem
          height .03rem
          background #15dba8
          margin .22rem auto .15rem
          position relative
          span{
            width .16rem
            height .16rem
            border-radius 50%
            background #280d74
            border 2px solid #15dba8
            display inline-block
            position absolute
            top -.1rem
          }
          span:nth-child(1){
            left 0
          }
          span:nth-child(2){
            left 1.3rem
          }
          span:nth-child(3){
            left 2.6rem
          }
          span:nth-child(4){
            left 3.9rem
          }
        }
        .redbom{
          width 2.55rem
          padding .63rem 0 0 1rem
          position relative
          .redmoney{
            position absolute
            top 1rem
            left 2.35rem
            font-size .18rem
            color #f81976
            span{
              font-size .36rem
              color #f81976
            }
          }
          img{
            width 100%
          }
        }
        .grab{
          color #fee722
          font-size .34rem
          text-align center
          padding .44rem 0 .9rem 0
        }
        .button{
          width 2.24rem
          height .7rem
          color #f81976
          font-size .28rem
          line-height .7rem
          text-align center
          margin .23rem auto .7rem
          background #fff035
          border-radius .08rem
          box-shadow inset -.03rem .03rem 0 #d1c207
        }
        .btn{
          background #fff9a9
          span{
            opacity 0.3
          }
        }
        .bomconter{
          overflow hidden
          width 100%
          margin 0 0 .7rem 0
          .buttonIn{
            width 2.04rem
            float left
            margin 0
          }
          .buttonIn:nth-child(1){
            margin 0 .3rem 0 .42rem
          }
        }
        .bomshowtop{
          margin-top .36rem
        }
        .share{
          text-align center
          color #fff
          font-size .24rem
        }
        .shareIn{
          font-size .2rem
          padding-top .05rem
        }
        .onshare{
          width 1.4rem
          height .4rem
          border 0.03rem solid #ff3977
          margin .32rem auto .4rem
          background #280d74
          text-align center
          color #ff3977
          font-size .24rem
          display block
          border-radius .25rem
          line-height .4rem
        }
      }
    }
    .orientation{
      img:nth-child(1){
        width .94rem
        height 1.02rem
        position absolute
        top 3.86rem
        right 0
      }
      img:nth-child(2){
        width 2.1rem
        height 2.28rem
        position absolute
        top 7.27rem
        right 0
      }
    }
  }
}
.poker{
  position absolute
  z-index 3
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(0,0,0,0.8)
  img{
    width 3.79rem
    height 3.07rem
    position absolute
    right 0
    top 0
  }
}
.footers{
  margin-top .4rem;
  padding-bottom .85rem;
  background-size 100%;
  .center{
    font-size .18rem;
    line-height .36rem;
    color #5e45b3;
    text-align center;
  }
}
.bom{
  width 100%
  img{
    width 100%
  }
}