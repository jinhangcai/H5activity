$clearfix() {
  \*zoom: 1
  &:before,
  &:after{
    display: table
    content: ""
  }
  &:after{
    clear: both
  }
}
.bg{
  height: 100%;
}
.footer{
  background: none;
  padding: 0;
  margin: 0;
}
.step2,.step3{
  padding-top .82rem;
}
.pk-wrap{
  background url(../../images/m20161111/ornament-bg2.png) no-repeat 0 bottom;
  background-size 100%;
  min-height: 100%;
  .header{
    position relative;
    box-sizing border-box;
    padding-top .4rem;
    height 1.8rem;
    .go-home{
      position relative;
      display block;
      width 1.3rem;
      height .56rem;
      margin-left .32rem;
      line-height @height;
      text-align center;
      font-size .28rem;
      border-left 0;
      text-indent -9999px;
      overflow hidden
      background url(../../images/m20161111/pk/back.png) no-repeat 0 0;
      background-size 100%;
    }
    .my-packet{
      position absolute;
      top .45rem;
      right .24rem;
      box-sizing border-box;
      display block;
      width 1.4rem;
      height .46rem;
      line-height @height;
      text-align center;
      background-color #412994;
      color #fff;
      font-size .24rem;
      border-radius .23rem;
    }
  }
  .info{
    padding .34rem 0;
    font-size .24rem;
    line-height .36rem;
  }
  .floor-pic{
    height 3.32rem;
  }
  .user-num{
    box-sizing border-box;
    height .74rem;
    padding-top .34rem;
    line-height .4rem;
    text-align center;
    font-size .24rem;
    color #fff;
  }
  .high-light{
    color #fff035
  }
  .tit{
    margin-top -.18rem;
    margin-bottom .6rem;
    font-size .3rem;
    line-height .48rem;
    text-align center;
    color #fff;
  }
  .luck-btn{
    display block;
    margin 0 auto;
    width 2.4rem;
    height .46rem;
    line-height @height;
    font-size .24rem;
    color #fff035;
    border .02rem solid;
    border-radius .23rem;
    text-align center;
  }
  .player-list{
    $clearfix();
    li {
      float left;
      width 33.3%;
      margin-bottom .7rem;
    }
    .player-item{
      width 1.04rem;
      margin 0 auto;
      text-align center;
    }
    .player-pic{
      display block;
      width 100%;
    }
    .name{
      font-size .2rem;
      line-height .38rem;
      color #fff;
    }
    .chose-btn{
      display block;
      width 100%;
      height .34rem;
      line-height @height;
      background #fff035;
      border-radius .17rem;
      font-size .2rem;
      color #280d74;
    }
  }
  .step3{
    .floor {
      background #280d74 url(../../images/m20161111/pk/arena-bg.png) no-repeat 0 5.26rem;
      background-size 100%;
    }
  }
  .flag{
    box-sizing border-box;
    position absolute;
    top 0;
    left 1.16rem;
    width 2.69rem;
    height 2.41rem;
    padding-top .1rem;
    background url(../../images/m20161111/pk/flag.png) no-repeat 0 0;
    background-size 100%;
    img {
      display block;
      width 1.77rem;
      margin 0 auto;
    }
  }
  .pk-content{
    $clearfix();
    position relative;
    z-index 2;
    padding-top 1.54rem;
  }
  .pk-item{
    float left;
    width 50%;
    text-align center;
  }
  .player-status{
    height .66rem;
    text-align center;
    img {
      height .46rem;
    }
  }
  .pk-pic{
    width 1.5rem;
    margin 0 auto;
    img {
      display block;
      width 100%;
    }
  }
  .pk-name{
    margin-top .18rem;
    font-size .2rem;
    line-height .3rem;
    color #fff;
  }
  .arena{
    height 1.86rem;
    padding-top .74rem;
    text-align center;
    .pk-status{
      font-size .32rem;
      line-height .48rem;
      color #fff035;
    }
    .pk-sub{
      font-size .24rem;
      line-height .3rem;
      color #fff;
    }
    .pk-btns{
      padding-top .52rem;
      .pk-btn{
        display inline-block;
        width 1.76rem;
        height .56rem;
        margin 0 .18rem;
        line-height @height;
        font-size .24rem;
        color #fff035;
        border 1px solid;
        border-radius .28rem;
      }
    }
  }
  .animate1{
    display: none;
    position absolute;
    top 1.95rem;
    width 2rem;
    height 2rem;
    background url(../../images/m20161111/pk/pk-anim1.png) no-repeat 0 0;
    background-size 100%;
  }
  .animate1left{
    left .29rem;
  }
  .animate1right{
    right .29rem;
  }
  .animate2{
    display: none;
    position absolute;
    top 2.67rem;
    width 0;
    height .6rem;
    overflow hidden;
    .inner{
      position absolute;
      top 0;
      width 2.78rem;
      height .6rem;
      background url(../../images/m20161111/pk/pk-anim2.png) no-repeat right 0;
      background-size 100%;
    }
  }
  .animate2left{
    left 1.07rem;
    .inner{
      left 0;
    }
  }
  .animate2right{
    right 1.07rem;
    .inner{
      right 0;
    }
  }
  .animate3{
    display: none;
    position absolute;
    top 2.2rem;
    width 1.45rem;
    height 1.54rem;
    background url(../../images/m20161111/pk/pk-anim3.png) no-repeat 0 0;
    background-size 100%;
    -webkit-transform: scale(0)
  }
  .animate3left{
    left .65rem;
  }
  .animate3right{
    right .65rem;
  }
  .animated{
    display block;
  }
  .move1{
    -webkit-animation: move .4s ease;
  }
  .move2{
    -webkit-animation: move2 .3s ease .1s;
  }
  .move3{
    -webkit-animation: move3 .4s ease .1s;
  }
  .tada{
    -webkit-animation: tada 1s;
  }
  @-webkit-keyframes move /* Safari 和 Chrome */
  {
    0%{
      -webkit-transform:rotate(0);
    }
    9%{
      -webkit-transform:rotate(0);
    }
    10%{
      -webkit-transform:rotate(15deg);
    }
    19%{
      -webkit-transform:rotate(15deg);
    }
    20%{
      -webkit-transform:rotate(40deg);
    }
    29%{
      -webkit-transform:rotate(40deg);
    }
    30%{
      -webkit-transform:rotate(65deg);
    }
    39%{
      -webkit-transform:rotate(65deg);
    }
    40%{
      -webkit-transform:rotate(75deg);
    }
    49%{
      -webkit-transform:rotate(75deg);
    }
    50%{
      -webkit-transform:rotate(90deg);
    }
    59%{
      -webkit-transform:rotate(90deg);
    }
    60%{
      -webkit-transform:rotate(135deg);
    }
    69%{
      -webkit-transform:rotate(135deg);
    }
    70%{
      -webkit-transform:rotate(180deg);
    }
    79%{
      -webkit-transform:rotate(180deg);
    }
    80%{
      -webkit-transform:rotate(220deg);
    }
    89%{
      -webkit-transform:rotate(220deg);
    }
    90%{
      -webkit-transform:rotate(270deg);
    }
    99%{
      -webkit-transform:rotate(270deg);
    }
    100%{
      -webkit-transform:rotate(320deg);
    }
  }
  @-webkit-keyframes move2 /* Safari 和 Chrome */
  {
    10%{
      width 1rem;
    }
    20%{
      width 1.16rem;
    }
    60%{
      width 1.66rem;
    }
    80%{
      width 1.98rem;
    }
    100%{
      width 2.78rem;
    }
  }
  @-webkit-keyframes move3 /* Safari 和 Chrome */
  {
    0%{
      -webkit-transform: scale(0) rotate(-45deg);
    }
    24%{
      -webkit-transform: scale(0) rotate(-45deg);
    }
    25%{
      -webkit-transform: scale(.25) rotate(-45deg);
    }
    49%{
      -webkit-transform: scale(.25) rotate(-45deg);
    }
    50%{
      -webkit-transform: scale(.5) rotate(-90deg);
    }
    74%{
      -webkit-transform: scale(.5) rotate(-90deg);
    }
    75%{
      -webkit-transform: scale(.75) rotate(-45deg);
    }
    99%{
      -webkit-transform: scale(.75) rotate(-45deg);
    }
    100%{
      -webkit-transform: scale(1.5) rotate(0);
    }
  }
}
@-webkit-keyframes jello {
  from, 11.1%, to {
    -webkit-transform: none;
    transform: none;
  }

  22.2% {
    -webkit-transform: skewX(-12.5deg) skewY(-12.5deg);
    transform: skewX(-12.5deg) skewY(-12.5deg);
  }

  33.3% {
    -webkit-transform: skewX(6.25deg) skewY(6.25deg);
    transform: skewX(6.25deg) skewY(6.25deg);
  }

  44.4% {
    -webkit-transform: skewX(-3.125deg) skewY(-3.125deg);
    transform: skewX(-3.125deg) skewY(-3.125deg);
  }

  55.5% {
    -webkit-transform: skewX(1.5625deg) skewY(1.5625deg);
    transform: skewX(1.5625deg) skewY(1.5625deg);
  }

  66.6% {
    -webkit-transform: skewX(-0.78125deg) skewY(-0.78125deg);
    transform: skewX(-0.78125deg) skewY(-0.78125deg);
  }

  77.7% {
    -webkit-transform: skewX(0.390625deg) skewY(0.390625deg);
    transform: skewX(0.390625deg) skewY(0.390625deg);
  }

  88.8% {
    -webkit-transform: skewX(-0.1953125deg) skewY(-0.1953125deg);
    transform: skewX(-0.1953125deg) skewY(-0.1953125deg);
  }
}
@-webkit-keyframes tada {
  from {
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }

  10%, 20% {
    -webkit-transform: scale3d(.9, .9, .9) rotate3d(0, 0, 1, -3deg);
    transform: scale3d(.9, .9, .9) rotate3d(0, 0, 1, -3deg);
  }

  30%, 50%, 70%, 90% {
    -webkit-transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, 3deg);
    transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, 3deg);
  }

  40%, 60%, 80% {
    -webkit-transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, -3deg);
    transform: scale3d(1.1, 1.1, 1.1) rotate3d(0, 0, 1, -3deg);
  }

  to {
    -webkit-transform: scale3d(1, 1, 1);
    transform: scale3d(1, 1, 1);
  }
}

#shareMask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .8) url("../../images/m20161111/pk/share-mask.png") no-repeat 3rem .3rem;
  background-size: 2.95rem auto;
}