@import "../common.styl";
@import "../iconfont";

@font-face {
  $font-face(iconfont, '../iconfont/iconfont');
}
.iconfont {
  font-family: 'iconfont' !important;
  font-weight: 400;
  font-style: normal;
  font-variant: normal;
  line-height: 1;
  text-transform: none;
  speak: none;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icon-close:before{
  content: "\e604";
}

body{
  background #24106f
}

.viewport{
  height 100%;
  overflow auto;
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
}
.bg{
  background url(../../images/m20161111/bg.jpg) 0 0 repeat;
  background-size .2rem;
}
.banner{
  img {
    display: block;
    width 100%;
  }
}
.container{
  background url(../../images/m20161111/ornament-bg.png) 0 0 no-repeat;
  background-size 6.4rem;
}
.floor{
  position relative;
  margin: 0 .58rem .88rem;
  padding .7rem 0 .4rem;
  border: .03rem solid;
  background: #280d74;
  .title-wrap{
    {$public-center-horizontally}
    top -.47rem;
  }
  .title{
    display table-cell;
    width 2.74rem;
    height .84rem;
    margin 0 auto;
    border: .03rem solid;
    font-size .3rem;
    background: #280d74;
    text-align center;
    vertical-align middle;
    &:after{
      content '';
      position absolute;
      right -.19rem;
      top -.16rem;
      width .51rem;
      height .54rem;
    }
    span {
      display block;
      color #fff;
      font-size .24rem;
    }
  }
  .floor-pic{
    img {
      display block;
      width 2.44rem;
      margin 0 auto;
    }
  }
  .info{
    font-size .28rem;
    line-height .36rem;
    color #fff;
    text-align center;
  }
  .deco{
    position absolute;
    width .07rem;
    height .07rem;
    border .03rem solid #fee30a
  }
}
.floor1{
  border-color #15dba8;
  .title{
    border-color #15dba8;
    color #15dba8;
    &:after{
      background url(../../images/m20161111/tit-dec1.png) no-repeat 0 0;
      background-size 100%;
    }
  }
}
.floor2{
  border-color #a0eaf7;
  &:after{
    content '';
    position absolute;
    top .88rem;
    right 0;
    width 1.05rem;
    height 2.69rem;
    background url(../../images/m20161111/d2.png) no-repeat 0 0;
    background-size 100%;
  }
  .title{
    border-color #a0eaf7;
    color #a0eaf7;
    &:after{
      background url(../../images/m20161111/tit-dec2.png) no-repeat 0 0;
      background-size 100%;
    }
  }
  .deco{
    left .5rem;
    top .91rem;
  }
}
.floor3{
  border-color #f96906;
  .title{
    border-color #f96906;
    color #f96906;
    &:after{
      background url(../../images/m20161111/tit-dec3.png) no-repeat 0 0;
      background-size 100%;
    }
  }
  .floor-pic{
    img {
      width 4.12rem;
    }
  }
}
.floor4{
  border-color #f81976;
  &:after{
    content '';
    position absolute;
    top 0;
    right 0;
    width .5rem;
    height .67rem;
    background url(../../images/m20161111/d4.png) no-repeat 0 0;
    background-size 100%;
  }
  .title{
    border-color #f81976;
    color #f81976;
    &:after{
      background url(../../images/m20161111/tit-dec4.png) no-repeat 0 0;
      background-size 100%;
    }
  }
  .deco{
    left .5rem;
    top 3.9rem;
  }
}
.floor5{
  border-color #15dba8;
  &:after{
    content '';
    position absolute;
    top 1.1rem;
    left .1rem;
    width .83rem;
    height .83rem;
    background url(../../images/m20161111/d5.png) no-repeat 0 0;
    background-size 100%;
  }
  .title{
    border-color #15dba8;
    color #15dba8;
    &:after{
      background url(../../images/m20161111/tit-dec5.png) no-repeat 0 0;
      background-size 100%;
    }
  }
}
.floor6{
  margin-bottom .56rem;
  border-color #a3f018;
  .title{
    border-color #a3f018;
    color #a3f018;
    &:after{
      background url(../../images/m20161111/tit-dec6.png) no-repeat 0 0;
      background-size 100%;
    }
  }
  .floor-pic{
    img {
      width 3.42rem;
    }
  }
  .deco{
    left .5rem;
    top .91rem;
  }
}
.btn{
  display block;
  width 2.44rem
  height .7rem;
  margin 0 auto;
  line-height @height;
  text-align center;
  font-size .28rem;
  font-weight bold;
  color #f81976;
  background-color #fff035;
  border-radius .1rem;
  box-shadow inset -0.03rem 0.03rem 0 #d1c207;
}
.time-shaft{
  position relative;
  height .84rem;
  &:after{
    content '';
    position absolute;
    height .03rem;
    width 3.86rem;
    background-color #15dba8;
    top .5rem;
    left .62rem;
  }
  .time-item{
    position relative;
    z-index 2;
    float left;
    width 25%;
    color #fff;
    text-align center;
    .date{
      font-size .18rem;
      line-height .45rem;
    }
    .circle{
      display block;
      margin 0 auto;
      width .12rem;
      height .12rem;
      background #280d74;
      border .03rem solid #15dba8;
      border-radius 50%;
    }
    .time{
      font-size .18rem;
      line-height .3rem;
    }
  }
}

.rule-btn{
  a {
    display block;
    width 2.74rem;
    height .74rem;
    margin 0 auto;
    background-color: #280d74;
    color: #fe06fc;
    border: .03rem solid;
    text-align center;
    font-size .28rem;
    font-weight bold;
    line-height @height;
  }
}
.footer{
  margin-top .3rem;
  padding-bottom .88rem;
  background: url(../../images/m20161111/footer-bg.png) no-repeat 0 bottom;
  background-size 100%;
  .center{
    font-size .18rem;
    line-height .36rem;
    color #5e45b3;
    text-align center;
  }
}
.pop-rule{
  position fixed;
  z-index 10;
  top: 0;
  left: 0;
  width 100%;
  height 100%;
  background-color rgba(0, 0, 0, .7)
  .pop-rule-content{
    position relative;
    box-sizing border-box;
    {$public-center-completely}
    padding .2rem .4rem .4rem;
    width 5.4rem;
    background-color #fff;
    .title{
      height .67rem;
      line-height @height;
      font-size .3rem;
      color #f81976;
      text-align center;
      border-bottom 1px solid #f81976;
      margin-bottom .2rem;
    }
    p {
      font-size .24rem;
      line-height .4rem;
      color #3c2ab4;
      margin-bottom .14rem;
    }
    .content-wrap{
      max-height: 50vh;
      overflow: auto;
    }
    .pop-rule-close{
      {$public-center-horizontally}
      bottom -.84rem;
      width .62rem;
      height .62rem;
      background url(../../images/m20160918/close-btn.png) no-repeat top center;
      background-size .62rem;
    }
  }
}
.pop-rule2{
  .pop-rule-content{
    padding-top 0;
    .title{
      height .88rem;
      line-height .88rem;
      color #3c2ab4;
      border-bottom 1px solid #3c2ab4;
    }
    .pop-rule-close2{
      position absolute;
      top 0;
      right 0;
      padding .3rem;
      color #3c2ab4;
      .iconfont{
        font-size .32rem;
      }
    }
  }
  .alert-pic{
    margin .3rem 0 .25rem;
    img {
      display block;
      width 2.6rem;
      margin 0 auto;
    }
  }
  .alert-content{
    height 1rem;
    line-height .42rem;
    text-align center;
    font-size .28rem;
    color #3c2ab4;
  }
  .alert-btn{
    display block;
    width 1.76rem;
    height .46rem;
    line-height @height;
    color #3c2ab4;
    border .02rem solid;
    border-radius .23rem;
    text-align center;
    font-size .24rem;
    margin 0 auto;
  }
  .empty-list{
    height 2rem;
    line-height @height;
    text-align center;
    font-size: 0.24rem;
    color: #3c2ab4;
  }
}
.award-list{
  li {
    position relative;
    margin-bottom .18rem;
  }
  .award-name,
  .award-time{
    line-height .3rem;
    font-size .24rem;
    color #3c2ab4;
  }
  .award-packet{
    {$public-center-vertical}
    right 0;
    line-height .6rem;
    font-size .24rem;
    color #fe06fc;
  }
}