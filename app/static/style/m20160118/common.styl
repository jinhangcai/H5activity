@import "../common.styl";
@import "../address_moudle";

//H标签
$hs=@block{
   padding .5rem 0 0 .8rem
   img{
      width 0.76rem
      height 0.53rem
      position absolute
      left .97rem
      top .46rem
   }
   span{
      font-size .36rem
      color #613998
      font-weight bold
   }
}
//p标签
$pps=@block{
  margin 0 auto
  width 4.58rem
  font-size .26rem
  color #613998
  padding-top .35rem
}
// p标签introduce
$ppsint=@block{
  text-align: center
  color #8e5bd3
  line-height .35rem
  font-size .2rem

}
// p标签invest
$invest=@block{
  text-align: center
  color #613998
  line-height .45rem
  font-size .22rem

}
//li
$lis=@block{
  width 2.24rem
  height 1.91rem
  float: left
  margin-top .22rem
  &:nth-child(odd){
    margin-right .19rem
  }
  .prize-item{
    box-sizing border-box
    border-radius .2rem
    border 1px solid #fff
    width 100%
    height 1.6rem
    .introduce{
      {$ppsint}
      color #8e5bd3
      line-height .22rem
    }
  }
  .invest{
    {$invest}
  }
  img{
    width 100%
  }
}
.viewport{
  background #dbfbfc
}
.head{
  width 100%
  img{
    width 100%
  }
}
.luck{
  width 5.72rem
  margin 0 auto
  background url(../../images/m20160118/bg.png) no-repeat 0 0
  background-size 100% 100%
  height 3.83rem
  position relative
  h2{
    text-align center
    {$hs}
  }
  .write{
    {$pps}
  }
}
.special{
  width 5.82rem
  margin 0 auto
  background url(../../images/m20160118/bg-one.png) no-repeat 0 0
  background-size 100% 100%
  height 10.90rem
  margin-top .16rem
  position relative
  h2{
    text-align center
    {$hs}
    img{
      width .58rem
      height .56rem
    }
  }
    .write{
      {$pps}
      width 4.7rem
    }
  .card{
    margin 0 auto
    margin-top .2rem
    width 3.09rem
    height 1.89rem
    .card-border{
      box-sizing border-box;
      border-radius .2rem
      border 1px solid #fff
      height 1.6rem
      img{
        width 100%
      }
      .introduce{
        {$ppsint}
      }
    }
    .invest{
      {$invest}
    }
  }
  .prize{
    width 4.67rem
    margin 0 auto
    li{
      {$lis}
    }
  }
}
.title{
  position relative
  font-size .3rem
  color #613998
  line-height .46rem
  height .46rem
  text-align center
  width 4.88rem
  margin .27rem auto 0
  &:before{
    content: ''
    position: absolute
    left 0
    top 50%
    width 100%
    height .02rem
    background-color #613998
  }
  span{
    position relative
    z-index 2
    padding 0 .18rem
    background-color #dbfbfc
    font-weight bold
  }
}
.rules{

  width 5.2rem
  margin 0 auto
  ol{
    padding-top .35rem
    overflow hidden
    margin-bottom 1rem
    li{
      color #613998
      font-size .26rem
      margin-bottom .2rem
      width 100%
      a{
        color #ff0000
        text-decoration underline
      }
    }
  }

}
.button{
  display none
  width 100%
  height .73rem
  background url(../../images/m20160118/bom.png) no-repeat 0 0
  background-size 100%
  text-align center
  color #440b92
  font-size .26rem
  line-height .73rem
  position fixed
  bottom 0
  left 0
  z-index 10
}
.stock-up,
.highlight{
  color #ff0000
}
.stock-down{
  color #198f29
}