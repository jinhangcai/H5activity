@import "../common.styl";
@import "../address_moudle";
enve=@block{//文字
 color #213744
 font-size .28rem
 text-align center
 .enve-money{
    color #ff7a2d
    font-size .28rem
 }
}
btn=@block{//按钮
  font-size .3rem
  color #fff
  text-align center
  line-height .75rem
  display block
  margin 0 auto
  width 2.04rem
  height .75rem
  border-radius .2rem
  background #ff7a2d
  margin-top .35rem
}
.viewport{
  background #caedf3
}
.main {
  position relative
  padding-bottom .01rem
  .banner {
    display block
    width 100%
  }
  .main-content {
    background-color #aedff1
    position relative
    padding .39rem 0 .33rem
    #green{
      display none
    }
    .item{
      margin 0 .3rem .58rem;
      padding 0 .54rem .35rem .54rem;
      border 2px solid #213744;
      border-radius .1rem;
      background-color #caedf3;
    }
    .envelopes {

      {enve}
      padding-top .43rem
    }
    .btn {
      {btn}
    }
    .envelopesin {
      text-align left
      line-height .4rem
    }
  }
}

.title {
  width 2.57rem
  height .39rem
  margin 0 auto .25rem;
  img {
    width 100%
  }
}
.rules{
  margin: 0 auto;
  padding .54rem .52rem 0;
  ol{
    padding-top .3rem
    overflow hidden
    width 5.29rem
    margin 0 auto 1rem
    li{
      color #213744
      font-size .24rem
      width 100%
      line-height .4rem
      a{
        color #ff7a2d
        text-decoration underline
      }
    }
  }
}
// 弹窗样式
.ui-dialog-wrap{
  position fixed;
  z-index 12;
  top 0;
  left 0;
  width 100%;
  height 100%;
  background-color rgba(0,0,0,.5);
  .ui-dialog-box{
    transform translate(-50%, -50%);
    -webkit-transform translate(-50%, -50%)
    position absolute;
    top 50%;
    left 50%;
    box-sizing border-box;
    padding .3rem .38rem;
    width 4.40rem;
    height 3.3rem
    background #fff
    background-size auto 100%;
    border-radius .14rem;
    max-height 90%;
    overflow-y auto;
    .ui-dialog-content{
      text-align center;
      .boy{
        width 100%
        height 1.3rem
        position relative
        .boyonin{
          position absolute
          left .78rem
          top .25rem
          background url("../../images/m20160408/boy.png") no-repeat 0 0
          background-size 100%
          width .62rem
          height .73rem
        }
        .gral{
          position absolute
          left .78rem
          top .25rem
          background url("../../images/m20160408/gral.png") no-repeat 0 0
          background-size 100%
          width .62rem
          height .73rem
        }
        span{
          position absolute
          left 1.6rem
          top .5rem
          color #7885c9
          font-size .3rem
        }
      }
      .prize{
        width 1.6rem;
        height 1.6rem;
        border 1px solid #f5b223;
        box-sizing border-box;
        background-color #fff;
        border-radius 50%;
        margin 0 auto .24rem;
        overflow hidden;

      }
      .cont{
        font-size .26rem;
        color #976d0d;
      }

    }
    .ui-dialog-footer{
      width 3.27rem
      height .78rem
      margin 0 auto
      border 2px solid #7885c9
      border-radius .2rem
      text-align center
      line-height .78rem
      box-sizing border-box;
      margin-top .5rem
      .ui-dialog-btn{
        box-sizing border-box;
        width 2.32rem;
        line-height .66rem;
        margin 0 auto;
        font-size .3rem;
        color #7885c9
        width 100%
        display block
      }
      .ui-dialog-address{
        box-sizing border-box;
        width 2.3rem;
        line-height .66rem;
        font-size .3rem;
        margin-left 2rem;
      }
      .ui-dialog-again{
        float: left;
        box-sizing border-box;
        width 1.7rem;
        line-height .66rem;
        font-size .3rem;
        background-color #f5b223;
        box-shadow: 0 0.03rem #b88417;
      }
    }
  }
}
.ui-dialog-hide{
  display:none;
}
.poker{
  display none
  position absolute
  z-index 3
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(0,0,0,0.8)
  div{
    img{
      width 3.82rem
      height 2.98rem
      position absolute
      right 0
      top 0
    }
  }
}
.invitation{
  overflow hidden
  width 100%
  border-radius .2rem
  li{
    color #333333
    font-size .28rem
    padding 0 .4rem .23rem 0
    overflow hidden
    p{
      display inline-block
      text-align left
      float left
      color #333333
    }
    p:nth-child(1){
      width 3.05rem
    }
    p:nth-child(2){

    }
  }
  li:nth-child(1){
    padding .35rem 0 .3rem 0
    p{
      color #ff7a2d
    }
  }
}