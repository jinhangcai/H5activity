}

html,body{
  overflow auto;
}

body{
  background #76599d
}

.dice-bg{
  height 8.61rem;
  background url("../../images/m20160718/page-bg.png") repeat-x 0 0;
  background-size auto 8.61rem;
}

.btn{
  display: block;
  border-radius .08rem;
  background: -webkit-linear-gradient(top, #fbfda2 0%, #ebc409 100%);
  font-size .24rem;
  color #413153;
  text-align center;
}

.top-bar{
  box-sizing border-box;
  height 1.59rem;
  margin 0 .3rem;
  padding-top .54rem;
  .chance-box{
    position absolute;
    top .5rem;
    display: block;
    box-sizing border-box;
    padding: .03rem;
    width: 2rem;
    height: .6rem;
    background: -webkit-linear-gradient(top, #ebc307 0%, #fbfca0 100%);
    border-radius .05rem;
    .chance-inner{
      display: block;
      line-height .54rem;
      height: .54rem;
      padding-right: .32rem;
      background: -webkit-linear-gradient(top, #fbfca0 0%, #ebc307 100%);
      border-radius .05rem;
      text-align center;
      font-size .22rem;
      color #413153;
    }
    .chance-plus{
      position absolute;
      right -.32rem;
      top -.02rem;
      box-sizing border-box;
      width .64rem;
      height .64rem;
      padding: .03rem;
      border-radius 50%;
      background: -webkit-linear-gradient(top, #ebc307 0%, #fbfca0 100%);
      .chance-plus-inner{
        display block;
        width .58rem;
        height .58rem;
        border-radius 50%;
        background: -webkit-linear-gradient(top, #fbfca0 0%, #ebc307 100%);
        &:before,
        &:after{
          {$public-center-completely}
          content '';
          background-color #413153;
        }
        &:before{
          width .22rem;
          height .03rem;
        }
        &:after{
          width .03rem;
          height .22rem;
        }
      }
    }
  }
  .top-link{
    float right;
    clear both;
    display block;
    height .4rem;
    padding 0 .32rem;
    border-radius .04rem;
    background-color rgba(0, 0, 0, .3);
    line-height .4rem;
    font-size .22rem;
    color #fff;
    & + .top-link{
      margin-top .25rem;
    }
  }
}

.dice-wrap{
  position relative;
  height 7rem;
  background url("../../images/m20160718/dice-tray.png") no-repeat center 2.56rem;
  background-size 5.08rem;
  .dice-header{
    box-sizing border-box;
    height 2.56rem;
    padding-top .37rem;
    .dice-result{
      box-sizing border-box;
      width 4.26rem;
      height 2rem;
      padding-top .25rem;
      margin 0 auto;
      background rgba(255, 255, 255, .5);
      border-radius .1rem;
      text-align center;
    }
    .shake-text{
      color transparent;
      height 1.33rem;
      background url("../../images/m20160718/shake-text.png") no-repeat center bottom;
      background-size 1.58rem;
    }
    .result-cont{
      margin-bottom .25rem;
      font-size .24rem;
      line-height .36rem;
      color #3d2d4f;
    }
    .btn{
