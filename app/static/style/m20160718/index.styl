      height .5rem;
      margin 0 auto;
      line-height .5rem;
    }
  }
  .dice-box{
    position relative;
    width 2.8rem;
    height 1.82rem;
    margin .6rem auto 1.4rem;
    .dice{
      position absolute;
      width .77rem;
      height .91rem;
      &:nth-child(1){
        top 0;
        left .56rem;
      }
      &:nth-child(2){
        top 0;
        left 1.53rem;
      }
      &:nth-child(3){
        top .91rem;
        left .05rem;
      }
      &:nth-child(4){
        top .91rem;
        left 1.02rem;
      }
      &:nth-child(5){
        top .91rem;
        left 1.97rem;
      }
    }
    .point1{
      background url("../../images/m20160718/point1.png") no-repeat 0 0;
      background-size .77rem;
    }
    .point2{
      background url("../../images/m20160718/point2.png") no-repeat 0 0;
      background-size .77rem;
    }
    .point3{
      background url("../../images/m20160718/point3.png") no-repeat 0 0;
      background-size .77rem;
    }
    .point4{
      background url("../../images/m20160718/point4.png") no-repeat 0 0;
      background-size .77rem;
    }
    .point5{
      background url("../../images/m20160718/point5.png") no-repeat 0 0;
      background-size .77rem;
    }
    .point6{
      background url("../../images/m20160718/point6.png") no-repeat 0 0;
      background-size .77rem;
    }
  }

  .dice-cup{
    position absolute;
    z-index 3;
    top .63rem;
    left 1.24rem;
    width 3.91rem;
    height 4.91rem;
    background url("../../images/m20160718/dice-cup.png") no-repeat 0 0;
    background-size 3.91rem;
  }
  .other-list{
    position relative;
    height .3rem;
    overflow hidden;
    ul{
      position absolute;
      width 100%;
      top 0;
      left 0;
    }
    li{
      text-align center;
      line-height .3rem;
      height .3rem;
      font-size .22rem;
      color #fff;
    }
  }
}

.tab-ctrl{
  position relative;
  box-sizing border-box;
  height 1.07rem;
  padding-top .24rem;
  &:before{
    content '';
    position absolute;
    top 0;
    left 0;
    width 1.33rem;
    height 1.07rem;
    background url("../../images/m20160718/decorate-bg.png") no-repeat 0 0;
    background-size 1.33rem;
  }
  &:after{
    content '';
    position absolute;
    top 0;
    right 0;
    width 1.33rem;
    height 1.07rem;
    background url("../../images/m20160718/decorate-bg.png") no-repeat 0 0;
    background-size 1.33rem;
    -webkit-transform: rotateY(180deg);
  }
  .ctrl-box{
    width 3.12rem;
    height .66rem;
    margin 0 auto;
    padding .02rem .03rem;
    border-radius .08rem;
    background: #eee;
    a {
      box-sizing border-box;
      float left;
      width 50%;
      height .66rem;
      background: #76599d;
      line-height .66rem;
      color #fff;
      font-size .24rem;
      text-align center;
      &:first-child{
        border-radius .08rem 0 0 .08rem;
      }
      &:last-child{
        border-radius 0 .08rem .08rem 0;
      }
      &.active{
        background-color #eee;
        color #38294a;
      }
    }
  }
}
.tab-item{
  padding 0 .2rem;
  .meta-tip{
    margin-bottom .15rem;
    text-align center;
    font-size .2rem;
    color #b199dd;
    line-height .36rem;
  }
  ul {
    $clearfix();
  }
  li{
    box-sizing border-box;
    float left;
    width 50%;
    padding 0 .1rem .2rem;
    text-align center;
    .item-inner{
      padding-bottom .08rem;
      border-radius .08rem;
      background-color #8e73b9;
    }
    .pic{
      position relative;
      height 1.18rem;
      img {
        height 100%;
      }
      .red-packet{
        {$public-center-completely}
        width 1.4rem;
        height .74rem;
        overflow hidden;
        background url("../../images/m20160718/red-packet.png") no-repeat 0 0;
        background-size 1.4rem;
        line-height .74rem;
        color #fff;
        font-size .14rem;
        span{
          float left;
          &:first-child{
            width .66rem;
            text-align right;
            font-size .32rem;
          }
          &:last-child{
            margin-left .05rem;
            line-height .8rem;
          }
        }
      }
    }

    .name,
    .rule{
      font-size .2rem;
      line-height .3rem;
      color #fff;
    }
    .name{
      color #38294a;
    }
  }
  .first-pic{
    width 100%;
    padding 0 1.1rem .2rem;
    .item-inner{
      box-sizing border-box;
      position relative;
      height 1.85rem;
      padding .6rem 0 0 1.36rem;
      .pic{
        position absolute;
        top 0;
        left .7rem;
        height 100%;
      }
    }
  }
}

.dialog-mask{
  position fixed;
  top 0;
  left 0;
  width 100%;
  height 100%;
  background rgba(0, 0, 0, .75);
  .main{
    {$public-center-completely}
  }
