@import "../common";
@import "../address_moudle";
$clearfix() {
  \*zoom: 1
  &:before,
  &:after{
    display: table
    content: ""
  }
  &:after{
    clear: both
  }
}
$hliagn(){
  transform translate(0, -50%);
  -webkit-transform translate(0, -50%)
}

$positioncenter(){
  transform translate(-50%, -50%);
  -webkit-transform translate(-50%, -50%)
}
$bg-color = #f5b223;
$font-color = #333;
$high-color = #731f77;
.underline{
  text-decoration none;
  border-bottom 1px solid;
}
.high-color{
  color $high-color;
}
.strong{
  font-weight bold;
}
.fr{
  float right;
}
.par{
  font-size .25rem;
  line-height .33rem;
}
.btn{
  font-size .28rem;
  padding 0 .16rem;
  line-height .48rem;
  border 2px solid $bg-color;
  border-radius .08rem;
  box-shadow: 0 0 0 1px #1b1b1b, 0 0 0 1px #c8931c inset;
  color #333;
}
html, body{
  height 100%;
  overflow auto;
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
  background-color $bg-color;
  color $font-color;
}
.activity-item{
  position relative;
  &:before{
    content '';
    position absolute;
    bottom -.14rem;
    left 50%;
    width 6rem;
    height .28rem;
    background-color: #b88819;
    border-radius 50%;
    transform translate(-50%, 0);
    -webkit-transform translate(-50%, 0)
  }
  .ai-box{
    position relative;
    z-index 2;
    background-color: $bg-color;
    margin .58rem .4rem .58rem;
    border 6px solid $bg-color;
    box-shadow: 0 0 0 1px #1b1b1b, 0 0 0 1px #c8931c inset;
  }
  .hd{
    position relative;
    border-bottom 1px dashed #333;
    h1 {
      text-indent .22rem;
      line-height .97rem;
      font-size .32rem;
      font-weight bold;
    }
    .address-btn{
      display none;
      position absolute;
      right .24rem;
      top 50%;
      $hliagn();
      @extend .btn;
    }
  }
}
.content{
  position relative;
  padding .4rem 0;
  min-height 4rem;
  .empty{
    position absolute;
    top 50%;
    left 50%;
    $positioncenter();
    text-align center;
    p {
      font-size .28rem;
      opacity .5;
      margin-bottom .42rem;
    }
    .btn{
      display block;
      width 2rem;
      margin 0 auto;
    }
  }
}
.list{
  line-height .56rem;
  font-size .28rem;
  text-align center;
}

#loadpage{
  position fixed;
  z-index 100;
  top 0;
  left: 0;
  width 100%;
  height 100%;
  background url(../../images/loading.gif) no-repeat center center;
  background-color rgba(0, 0, 0, 0.8);
  background-size: 1rem auto;
}