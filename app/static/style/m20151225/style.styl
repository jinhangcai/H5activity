@import "../common";
@import "../address_moudle";
$clearfix() {
  \*zoom: 1
  &:before,
  &:after{
    display: table
    content: ""
  }
  &:after{
    clear: both
  }
}
$hliagn(){
  transform translate(0, -50%);
  -webkit-transform translate(0, -50%)
}

$positioncenter(){
  transform translate(-50%, -50%);
  -webkit-transform translate(-50%, -50%)
}
$bg-color = #f5b223;
$font-color = #333;
$high-color = #731f77;
.underline{
  text-decoration none;
  border-bottom 1px solid;
}
.high-color{
  color $high-color;
}
.strong{
  font-weight bold;
}
.fr{
  float right;
}
.par{
  font-size .25rem;
  line-height .33rem;
}
html, body{
  height auto;
  overflow auto;
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
  background-color $bg-color;
  color $font-color;
}
.viewport{
  padding-bottom .8rem;
}
.banner{
  img {
    display block;
    width 100%;
  }
}
.act-wrap{
  width 100%;
  overflow-x hidden;
}
.activity-item{
  position relative;
  &:before{
    content '';
    position absolute;
    bottom -.14rem;
    left 50%;
    width 6rem;
    height .28rem;
    background-color: #b88819;
    border-radius 50%;
    transform translate(-50%, 0);
    -webkit-transform translate(-50%, 0)
  }
  .ai-box{
    position relative;
    z-index 2;
    background-color: $bg-color;
    margin .58rem .4rem 1.16rem;
    padding .1rem;
    border 6px solid $bg-color;
    box-shadow: 0 0 0 1px #1b1b1b, 0 0 0 1px #c8931c inset;
  }
  .tit{
    box-sizing border-box;
    width 4.8rem;
    margin -.67rem auto 0;
    line-height .4rem;
    padding .37rem 0 .22rem;
    text-align center;
    font-size .32rem;
    font-weight: bold;
    background: url(../../images/m20151225/tit-bg.png) no-repeat 0 0;
    background-size 100% 100%;
    height 1rem;
  }
  .short-tit{
    width: 3.76rem;
  }
  .min-mar{
    margin-bottom .58rem;
  }
}
.father{
  position absolute;
  width 1.47rem;
  height .91rem;
  top -1.07rem;
  left 50%;
  transform translate(-50%, 0);
  -webkit-transform translate(-50%, 0)
}
.activity-eggs{
  position relative;
  box-sizing border-box;
  padding .9rem 0 0;
  .eggs-bg{
    &:before{
      content '';
      display block;
      height 0;
      border .5rem solid transparent;
      border-bottom 1.12rem solid #f0c058;
    }
    border .06rem solid transparent;
    border-bottom .12rem solid #ba8b24;
  }
  .eggs{
    position absolute;
    top: .92rem;
    width 100%;
  }
  .easter-egg{
    position relative;
    float left;
    width 33.33%;
    height 1.42rem;
    &:before{
      position absolute;
      z-index 1;
      content '';
      display block;
      width .88rem;
      height .14rem;
      background-color #cea54c;
      border-radius 50%;
      bottom 0;
      left 50%;
      transform translate(-50%, 0);
      -webkit-transform translate(-50%, 0)
    }
    .egg{
      position relative;
      z-index 2;
      width 1.03rem;
      height 1.38rem;
      margin 0 auto;
      background url(../../images/m20151225/easter-egg.png) no-repeat 0 0;
      background-size 100% 100%;
    }
    .smash-egg{
      width: 1.66rem;
      height: 1.75rem;
      background: url("../../images/m20151225/smash-egg.png") no-repeat 0 0;
      background-size: 100% 100%;
      margin-top: -.22rem;
      margin-left: 0;
    }
    .gift-smash-egg{
      width: 1.66rem;
      height: 1.75rem;
      background: url("../../images/m20151225/gift-smash-egg.png") no-repeat 0 0;
      background-size: 100% 100%;
      margin-top: -.22rem;
      margin-left: 0;
    }
  }
}
.lh5{
  line-height .5rem;
}
#hammer{
  position absolute;
  z-index 4;
  top 0;
  left 80%;
  width 1.1rem;
  height .73rem;
  transform: rotate(30deg);
  -webkit-transform: rotate(30deg);
  transform-origin: 50% 50%;
  -webkit-transform-origin: 50% 50%;
  transition: transform .15s cubic-bezier(0.4, 0, 1, 1);
  -webkit-transition: -webkit-transform .15s cubic-bezier(0.4, 0, 1, 1);
  pointer-events: none;
}
.red-packet-wrap{
  padding .1rem;
  background #fef1d4 url(../../images/m20151225/fence-bg.png) repeat-x 0 0;
  background-size auto 100%;
  border-radius .1rem;
  margin .28rem 0 .18rem;
}
.red-packet-list{
  background-color #fef1d4;
  border-radius .1rem;
  $clearfix();
  li {
    float left;
    width 33.33%;
  }
}
.red-packet-item{
  margin-top .31rem;
  text-align center;
  .pic{
    width 1.03rem;
    padding-top .46rem;
    margin 0 auto;
    background url(../../images/m20151225/rp-bg.png) no-repeat 0 0;
    background-size 100% 100%;
    color #fff;
  }
  .new{
    position relative;
    &:before{
      content '新手专享';
      position absolute;
      top -.15rem;
      left -.4rem;
      display block;
      width .69rem;
      height .69rem;
      box-sizing border-box;
      padding .15rem .1rem 0;
      background url(../../images/m20151225/new.png) no-repeat 0 0;
      background-size 100% 100%;
      color #fff;
      font-size .2rem;
      line-height .21rem;
    }
  }
  .num{
    font-size .32rem;
    font-weight bold;
    line-height .32rem;
  }
  .sub{
    font-size .16rem;
    line-height .41rem;
  }
  .info{
    font-size .2rem;
    line-height .51rem;
    height .51rem;
  }
}

.coupon-item{
  position relative;
  box-sizing border-box;
  width 5.05rem;
  height 1.04rem;
  overflow hidden;
  margin .1rem auto;
  background-color #fef1d4;
  padding-left 2.06rem;
  font-size .28rem;
  line-height 1.04rem;
  &:before,
  &:after{
    content '';
    display block;
    position absolute;
    z-index 3;
    top: 0;
    width .05rem;
    height 100%;
    background url(../../images/m20151225/fence.png) repeat-y 0 0;
    background-size .1rem auto;
  }
  &:before{
    left 0;
  }
  &:after{
    right 0;
    background-position top right;
  }
  .label{
    position absolute;
    top 0;
    left: 0;
    width 1.9rem
    height 1.04rem;
    background-color #fae4aa;
    color #e65d45;
    text-align center;
    line-height 1;
    .num{
      font-size .54rem;
      margin .1rem 0 .06rem;
      font-weight bold;
    }
    .sub{
      font-size .28rem;
      font-weight normal;
    }
    .info{
      font-size .24rem;
    }
  }
  .flag{
    position absolute;
    top: -.5rem;
    left: -.75rem;
    width 1.5rem;
    height 1rem;
    box-sizing border-box;
    padding-top .6rem;
    line-height .4rem;
    text-align center;
    background-color #46b2ab;
    font-size .24rem;
    color #fff;
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
  }
}
.invest-sum{
  display none;
  margin .18rem .08rem;
  background-color #e7a821;
  line-height .6rem;
  font-size .26rem;
  text-align center;
}
.total-list{
  margin-top .18rem;
  $clearfix();
  li{
    float left;
    width 50%;
    box-sizing border-box;
    padding 0 .14rem;
    text-align center;
    margin-bottom .1rem;
  }
  .first{
    width 100%;
    padding 0 .84rem;
  }
  .total-item{
    background-color: #fef1d4;
    border-radius .06rem;
    .pic{
      height 1.78rem;
      overflow: hidden;
      img {
        height 100%;
        width auto;
      }
    }
    .info{
      display none;
    }
  }
  .par{
    font-size .2rem;
    line-height .38rem;
  }
}
.rule-wrap{
  margin -.72rem .38rem 0;
  .rule-btn{
    display block;
    width 2.38rem;
    height .86rem;
    margin 0 auto;
    background url(../../images/m20151225/tit2-bg.png) no-repeat 0 0;
    background-size 100% 100%;
    line-height .48rem;
    padding-top .16rem;
    box-sizing border-box;
    text-align center;
    font-size .32rem;
    font-weight bold;
    color $font-color;
  }
}
.rule-content{
  .par{
    margin-bottom .1rem;
  }
}
.list{
  position relative;
  padding-left .2rem;
  &:before{
    content '';
    display block;
    position absolute;
    top .12rem;
    left .1rem;
    width .08rem;
    height .08rem;
    background-color #000;
    border-radius 3px;
  }
}
.foot-bar{
  position fixed;
  z-index 10;
  left 0;
  bottom 0;
  height .8rem;
  width 100%;
  background-color #fff8e7;
  box-sizing border-box;
  border 1px solid #000;
  a {
    float left;
    width 50%;
    box-sizing border-box;
    height 100%;
    line-height .8rem;
    text-align center;
    font-size .3rem;
    color #333;
    & ~ a{
      border-left 1px solid #000;
    }
    .icon{
      display inline-block;
      margin-right .1rem;
      width .33rem;
      height .33rem;
      background url(../../images/gift.png) no-repeat 0 0;
      background-size 100%;
      transform: translate(0, .04rem);
      -webkit-transform: translate(0, .04rem);
    }
  }
}
#myPrizeBtn{
  color #ef3c34;
}
#loadpage{
  position fixed;
  z-index 100;
  top 0;
  left: 0;
  width 100%;
  height 100%;
  background url(../../images/loading.gif) no-repeat center center;
  background-color rgba(0, 0, 0, 0.8);
  background-size: 1rem auto;
}
.share-mask{
  display none;
  position fixed;
  z-index 11;
  top 0;
  left: 0;
  width 100%
  height 100%
  background-color rgba(0,0,0,.8);
  img{
    position absolute;
    top .34rem;
    right .48rem;
    width 2.65rem;
  }
}
.btn{
  display block;
  background-size 100% 100%;
  background-color #e65d45;
  border-radius .1rem;
  font-size .3rem;
  line-height .66rem;
  color #fff;
  text-align center;
  box-shadow 0 .03rem #d14127;
}
// 浮动边框
.aside{
  display none;
  position fixed;
  z-index 10;
  right .08rem;
  top 60%;
  $hliagn();
  a {
    position relative;
    display block;
    box-sizing border-box;
    width .88rem;
    height .88rem;
    border 1px solid #333;
    background-color rgba(255, 255, 255, .8);
    border-radius 50%;
    text-align center;
    color #333;
    font-size .24rem;
    margin-bottom .08rem;
    box-shadow: .01rem .03rem rgba(0,0,0,0.5);
    span {
      position absolute;
      left 50%;
      top 50%;
      width .8rem;
      $positioncenter();
    }
  }
  .active{
    background-color rgba(189, 56, 32, .8);
    color #fff;
  }
}
// 弹窗样式
.ui-dialog-wrap{
  position fixed;
  z-index 12;
  top 0;
  left 0;
  width 100%;
  height 100%;
  background-color rgba(0,0,0,.5);
  .ui-dialog-box{
    $positioncenter();
    position absolute;
    top 50%;
    left 50%;
    box-sizing border-box;
    padding .3rem .38rem;
    width 5rem;
    background #fff url(../../images/m20151212/dialog-bg.png) repeat-x 0 0;
    background-size auto 100%;
    border-radius .14rem;
    max-height 90%;
    overflow-y auto;
    .ui-dialog-content{
      color $font-color;
      text-align center;
      .prize{
        width 1.6rem;
        height 1.6rem;
        border 1px solid #f5b223;
        box-sizing border-box;
        background-color #fff;
        border-radius 50%;
        margin 0 auto .24rem;
        overflow hidden;
      }
      .cont{
        font-size .26rem;
        color #976d0d;
      }
    }
    .ui-dialog-footer{
      padding-top .3rem;
      box-sizing border-box;
      .ui-dialog-btn{
        @extend .btn;
        box-sizing border-box;
        width 2.32rem;
        line-height .66rem;
        margin 0 auto;
        font-size .3rem;
      }
      .ui-dialog-address{
        @extend .btn;
        box-sizing border-box;
        width 2.3rem;
        line-height .66rem;
        font-size .3rem;
        margin-left 2rem;
      }
      .ui-dialog-again{
        @extend .btn;
        float: left;
        box-sizing border-box;
        width 1.7rem;
        line-height .66rem;
        font-size .3rem;
        background-color #f5b223;
        box-shadow: 0 0.03rem #b88417;
      }
    }
  }
}
.ui-dialog-hide{
  display:none;
}
// 弹框红包样式
.inner-red-packet{
  padding-top .4rem;
  width .92rem;
  height 1.05rem;
  box-sizing border-box;
  margin .26rem auto 0;
  text-align center;
  background url(../../images/m20151225/rp-bg.png) no-repeat 0 0;
  background-size 100% 100%;
  color #fff;
  .num{
    font-size: 0.32rem;
    font-weight: bold;
    line-height: 0.32rem;
  }
  .sub{
    font-size: 0.16rem;
    line-height: 0.3rem;
  }
}
// 弹框奖品样式
.red-wine{
  background url(../../images/m20151225/red-wine.png) no-repeat 0 0;
  background-size 100% 100%;
}
.dolls{
  background url(../../images/m20151225/dolls.png) no-repeat 0 0;
  background-size 100% 100%;
}
.cup{
  background url(../../images/m20151225/cup.png) no-repeat 0 0;
  background-size 100% 100%;
}
.thumb01{
  background url(../../images/m20151225/thumb01.png) no-repeat 0 0;
  background-size 100% 100%;
}
.thumb02{
  background url(../../images/m20151225/thumb02.png) no-repeat 0 0;
  background-size 100% 100%;
}
.thumb03{
  background url(../../images/m20151225/thumb03.png) no-repeat 0 0;
  background-size 100% 100%;
}
.thumb04{
  background url(../../images/m20151225/thumb04.png) no-repeat 0 0;
  background-size 100% 100%;
}