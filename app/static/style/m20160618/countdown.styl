@import "../common.styl";
@import "../address_moudle";

//--------------------------------------------------------【工具代码块】

//垂直居中
$public-center-vertical =@block{
  position: absolute
  top: 50%
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}

//水平居中
$public-center-horizontally =@block{
  position: absolute
  left: 50%
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
}

//水平垂直居中
$public-center-completely =@block{
  position: absolute
  left: 50%
  top: 50%
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
.no-text {
  text-indent -999999px;
  font-size: 0;
  line-height: 0;
}

#shareMask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .8) url(../../images/m20160618/countdown-share-mask.png) no-repeat 3rem .3rem;
  background-size: 2.95rem auto;
}

#loadPage {
  position fixed;
  z-index 100;
  top 0;
  left 0;
  width 100%;
  height 100%;
  background: url(../../images/loading.gif) no-repeat center center;
  background-size: .39rem auto;
  background-color: rgba(0, 0, 0, 0.8);
}

.pop-box {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
  width: 100%
  height: 100%;
  background-color rgba(0, 0, 0, .5);
  .main {
    {$public-center-completely}
      box-sizing: border-box;
      width: 5.55rem;
      padding: .3rem;
      background-color: #fff;
      border-radius: 8px;
      .tit {
        color: #000;
        font-size: .28rem;
        text-align: center;
      }
      .cont {
        margin-top: .25rem;
        font-size: .24rem;
        color: #666;
      }
      .btn-close {
        position: absolute;
        right: .3rem;
        top: .2rem;
        color: #999;
        font-size: .36rem;
        line-height: 1;
        width: .5rem;
        height: .5rem;
        background: url(../../images/m20160618/btn-close.png) no-repeat center center;
        background-size: .2rem auto;
      }
  }
}

body {
  background-color: #198162;
  line-height: 1.3;
}

.header {
  position: relative
  height: 3.7rem;
  background: url(../../images/m20160618/hd-countdown.png) no-repeat 0 0;
  background-size: 6.4rem auto;
  .back-btn {
    position: absolute
    top: .3rem;
    left: .25rem;
    font-size: .24rem;
    color: #fff;
    width: 1.14rem;
    text-indent: .28rem;
    line-height: .48rem;
    background: url(../../images/m20160618/btn-back.png) no-repeat 0 0;
    background-size: 1.14rem auto;
  }
  .rule-btn {
    position: absolute
    top: .3rem;
    right: .25rem;
    font-size: .24rem;
    line-height: .48rem;
    color: #fff
  }
}

.main {
  padding: 0 .2rem .3rem;
  margin-top: .3rem;
  .box {
    background-color: #00976b;
    border-radius: 5px;
    padding: .3rem .3rem;
    .tit {
      {$public-center-horizontally}
      margin-top: -.6rem;
      display: inline-block;
      background-color: #15b400;
      color: #fff;
      font-size: .28rem;
      line-height: .6rem;
      padding: 0 .35rem;
      border-radius: 100px;
    }
    .cont {
      margin-top: .15rem;
    }
    & + .box {
      margin-top: .65rem;
    }
  }
  .box:nth-child(1) {
    .row:nth-child(1) {
      font-size: .24rem;
      color: #fff;
      span {
        font-weight: bold;
        font-size: .26rem;
      }
      a {
        color: #ffe86a;
        text-decoration: underline;
      }
    }
    .row:nth-child(2) {
      position: relative;
      margin: .3rem auto 0;
      overflow: hidden;
      height: 3.13rem;
      width: 5.05rem;
      background: url(../../images/m20160618/countdown-calendar.png) no-repeat center top;
      background-size: 4.8rem auto;
      table {
        margin: .4rem auto 0;
        color: #582415;
        caption {
          font-size: .24rem;
          line-height: .5rem;
        }
        td {
          font-size: .22rem;
          height: .9rem;
          width: .9rem;
          border: 1px solid #b2b2b2;
          text-align: center;
          position: relative;
          span {
            position: relative
            z-index: 1;
          }
          &.on::after {
            content: ' ';
            display: block;
            {$public-center-completely}
            width: .6rem;
            height: .6rem;
            background-color: #f7f24f;
            border-radius: 100%;
          }
        }
      }
      .login-mask {
        position: absolute;
        left: 0;
        top: 0;
        z-index: 2;
        width: 100%;
        height: 100%;
        background-color: rgba(25, 129, 98, .9);
        text-align: center;
        border-radius: 5px;
        .mask-main {
          {$public-center-completely}
          p {
            font-size: .24rem;
            color: #fff;
          }
          a {
            margin-top: .25rem;
            display: inline-block;
            padding: 0 .25rem;
            line-height: .5rem;
            font-size: .24rem;
            color: #582415;
            background-color: #f7f24f;
            border-radius: 100px;
          }
        }
      }
    }
    .row:nth-child(3) {
      margin-top: .3rem;
      table {
        width: 100%;
        color: #fff;
        td, th {
          padding: .1rem 0;
          border: 1px solid #0bab7c;
        }
        th {
          text-align: center;
          font-size: .24rem;
          background-color: #198162;
          font-weight: normal;
        }
        td {
          text-align: center;
          font-size: .22rem;
        }
      }
    }
    .row:nth-child(4) {
      margin-top: .3rem;
      font-size: .22rem;
      color: #fff;
    }
  }
  .box:nth-child(2) {
    .row:nth-child(1) {
      font-size: .24rem;
      color: #fff;
    }
    .row:nth-child(2) {
      margin-top: .3rem;
      text-align: center;
      a {
        display: inline-block;
        background-color: #f7f24f;
        font-size: .24rem;
        color: #582415;
        text-align: center;
        line-height: .5rem;
        padding: 0 .25rem;
        border-radius: 100px;
        &.disabled {
          color: rgba(88, 36, 21, .2);
        }
      }
    }
  }
}
