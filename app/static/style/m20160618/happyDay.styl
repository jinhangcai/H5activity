@import "../common.styl";
@import "../address_moudle";

//--------------------------------------------------------【工具代码块】

//垂直居中
$public-center-vertical =@block{
  position: absolute
  top: 50%
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}

//水平居中
$public-center-horizontally =@block{
  position: absolute
  left: 50%
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
}

//水平垂直居中
$public-center-completely =@block{
  position: absolute
  left: 50%
  top: 50%
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
.no-text {
  text-indent -999999px;
  font-size: 0;
  line-height: 0;
}

#loadPage {
  position fixed;
  z-index 100;
  top 0;
  left 0;
  width 100%;
  height 100%;
  background: url(../../images/loading.gif) no-repeat center center;
  background-size: .39rem auto;
  background-color: rgba(0, 0, 0, 0.8);
}

.pop-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%
  height: 100%;
  background-color rgba(0, 0, 0, .5);
  .main {
    {$public-center-completely}
      box-sizing: border-box;
      width: 5.55rem;
      padding: .3rem;
      background-color: #fff;
      border-radius: 8px;
      .tit {
        color: #000;
        font-size: .28rem;
        text-align: center;
      }
      .cont {
        margin-top: .25rem;
        font-size: .24rem;
        color: #666;
      }
      .btn-close {
        position: absolute;
        right: .3rem;
        top: .2rem;
        color: #999;
        font-size: .36rem;
        line-height: 1;
        width: .5rem;
        height: .5rem;
        background: url(../../images/m20160618/btn-close.png) no-repeat center center;
        background-size: .2rem auto;
      }
  }
}

body {
  background-color: #fa634e;
  line-height: 1.3;
  padding-bottom: .3rem;
}

.header {
  position: relative
  height: 4rem;
  background: url(../../images/m20160618/hd-happy-day.png) no-repeat 0 0;
  background-size: 6.4rem auto;
  .back-btn {
    position: absolute
    top: .3rem;
    left: .25rem;
    font-size: .24rem;
    color: #fff;
    width: 1.14rem;
    text-indent: .28rem;
    line-height: .48rem;
    background: url(../../images/m20160618/btn-back.png) no-repeat 0 0;
    background-size: 1.14rem auto;
  }
  .rule-btn {
    position: absolute
    top: .3rem;
    right: .25rem;
    font-size: .24rem;
    line-height: .48rem;
    color: #fff
  }
}

.main {
  padding: 0 .2rem .3rem;
  .box {
    background-color: #e14848;
    border-radius: 5px;
    padding: .3rem .3rem;
    .tit {
      {$public-center-horizontally}
      margin-top: -.6rem;
      display: inline-block;
      background-color: #c731cc;
      color: #fff;
      font-size: .28rem;
      line-height: .6rem;
      padding: 0 .35rem;
      border-radius: 100px;
    }
    .cont {
      margin-top: .25rem;
    }
    & + .box {
      margin-top: .65rem;
    }
  }
  .box:nth-child(1) {
    .row:nth-child(1) {
      p:nth-child(1) {
        font-size: .24rem;
        color: #fff;
      }
      p:nth-child(2) {
        font-size: .24rem;
        color: #ffe86a;
      }
    }
    .row:nth-child(2) {
      margin: .3rem auto 0;
      text-align: center;
      color: #fff;
      border-radius: 5px;
      font-size: .26rem;
      line-height: .6rem;
      background-color: #d83b3b;
      span, a {
        color: #ffe86a;
      }
    }
    .row:nth-child(3) {
      margin-top: .3rem;
      table {
        width: 100%;
        td, th {
          border: 1px solid #fa634e;
          text-align: center;
          color: #fff;
          padding: .1rem 0;
        }
        th {
          font-weight: normal;
          background-color: #d83b3b;
          font-size: .24rem;
        }
        td {
          font-size: .22rem;
        }
      }
    }
    .row:nth-child(4) {
      margin-top: .2rem;
      text-align: right;
      a {
        text-decoration: underline;
        font-size: .22rem;
        color: #fff;
      }
    }
  }
  .box:nth-child(2) {
    .row:nth-child(1) {
      background-color: #d83b3b;
      border-radius: 5px;
      position: relative;
      padding: .3rem 0;
      margin-top: .3rem;
      .box-main {
        margin-left: 2.3rem;
        li {
          & + li {
            margin-top: .3rem
          }
          .tits {
            font-size: .26rem;
            color: #ffe86a;
          }
          .conts {
            font-size: .2rem
            color: #fff;
          }
        }
      }
      .pic {
        position: absolute;
        left: .05rem;
        top: -.2rem;
        img {
          width: 2.15rem;
          height: 2.2rem;
        }
        figcaption {
          text-align: center;
          color: #fff;
          font-size: .2rem;
        }
      }
    }
    .row:nth-child(2) {
      font-size: .2rem;
      color: #fff;
      margin-top: .25rem;
      a {
        color: #ffe86a;
      }
    }
  }
  .box:nth-child(3) {
    .row:nth-child(1) {
      color: #fff;
      font-size: .24rem;
    }
    .row:nth-child(2) {
      text-align: center;
      margin-top: .25rem;
      a {
        display: inline-block;
        font-size: .24rem;
        color: #fff;
        border: 1px solid #fff;
        border-radius: 100px;
        padding: 0 .3rem;
        line-height: .45rem;
      }
    }
  }
}
