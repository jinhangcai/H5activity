@import "../common.styl";
@import "../address_moudle";

//--------------------------------------------------------【工具代码块】

//垂直居中
$public-center-vertical =@block{
  position: absolute
  top: 50%
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}

//水平居中
$public-center-horizontally =@block{
  position: absolute
  left: 50%
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
}

//水平垂直居中
$public-center-completely =@block{
  position: absolute
  left: 50%
  top: 50%
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
.no-text {
  text-indent -999999px;
  font-size: 0;
  line-height: 0;
}

#loadPage {
  position fixed;
  z-index 100;
  top 0;
  left 0;
  width 100%;
  height 100%;
  background: url(../../images/loading.gif) no-repeat center center;
  background-size: .39rem auto;
  background-color: rgba(0, 0, 0, 0.8);
}

.pop-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%
  height: 100%;
  background-color rgba(0, 0, 0, .5);
  .main {
    {$public-center-completely}
      box-sizing: border-box;
      width: 5.55rem;
      padding: .3rem;
      background-color: #fff;
      border-radius: 8px;
      .tit {
        color: #000;
        font-size: .28rem;
        text-align: center
      }
      .cont {
        margin-top: .25rem;
        font-size: .24rem;
        color: #666;
      }
      .btn-close {
        position: absolute;
        right: .3rem;
        top: .2rem;
        color: #999;
        font-size: .36rem;
        line-height: 1;
        width: .5rem;
        height: .5rem;
        background: url(../../images/m20160618/btn-close.png) no-repeat center center;
        background-size: .2rem auto;
      }
  }
}

body {
  background: url(../../images/m20160618/bg-prelude.gif) repeat 0 0;
  padding-bottom: .9rem;
  line-height: 1.5;
}

.header {
  position: relative
  height: 3.7rem;
  background: url(../../images/m20160618/hd-prelude.png) no-repeat 0 -1px;
  background-size: 6.4rem auto;
  .back-btn {
    position: absolute
    top: .3rem;
    left: .25rem;
    font-size: .24rem;
    color: #fff;
    width: 1.14rem;
    text-indent: .28rem;
    line-height: .48rem;
    background: url(../../images/m20160618/btn-back.png) no-repeat 0 0;
    background-size: 1.14rem auto;
  }
  .rule-btn {
    position: absolute
    top: .3rem;
    right: .25rem;
    font-size: .24rem;
    line-height: .48rem;
    color: #fff
  }
}

.main {
  margin-top: .3rem;
  padding: 0 .2rem .3rem;
  .box {
    background-color: #334cb8;
    border-radius: 5px;
    padding: .3rem .3rem;
    .tit {
      {$public-center-horizontally}
      margin-top: -.6rem;
      display: inline-block;
      background-color: #c731cc;
      color: #fff;
      font-size: .28rem;
      line-height: .6rem;
      padding: 0 .35rem;
      border-radius: 100px;
    }
    .cont {
      margin-top: .25rem;
    }
    & + .box {
      margin-top: .65rem;
    }
  }
  .box:nth-child(1) {
    color: #fff;
    font-size: .24rem;
    padding-bottom: .4rem;
    .cont {
      padding-left: 2.3rem;
      background: url(../../images/m20160618/add-interest.png) no-repeat .2rem center;
      background-size: 1.74rem auto;
    }
  }
  .box:nth-child(2) {
    .row:nth-child(1) {
      color: #fff;
      font-size: .24rem;
      a {
        color: #ffe42d;
        text-decoration: underline;
      }
    }
    .row:nth-child(2) {
      background-color: #4962ce;
      border-radius: 5px;
      position: relative;
      margin-top: .25rem;
      li {
        position: relative;
        padding: .3rem;
        height: 1.5rem;
        & + li {
          border-top: 1px solid #334cb8;
        }
        .tits, .conts {
          margin-left: 2rem;
        }
        .tits {
          margin-top: .2rem;
          color: #ffe42d;
          font-size: .24rem;
        }
        .conts {
          margin-top: .15rem;
          font-size: .2rem;
          line-height: 1.5;
          color: #fff;
        }
        .pic {
          position: absolute;
          left: .3rem;
          top: .3rem;
          img {
            width: 1.9rem;
            height: 1.5rem;
          }
        }
      }
    }
    .row:nth-child(3) {
      margin-top: .2rem;
      font-size: .2rem;
      color: #a6b7ff;
    }
  }
  .box:nth-child(3) {
    .row:nth-child(1) {
      color: #fff;
      font-size: .24rem;
      span {
        color: #a6b7ff;
      }
    }
    .row:nth-child(2) {
      margin-top: .3rem;
      background-color: #223db1;
      border-radius: 5px;
      color: #fff;
      font-size: .26rem;
      line-height: .6rem;
      text-align: center;
      span, a {
        color: #ffe42d;
        padding: 0 .05rem;
      }
    }
    .row:nth-child(3) {
      margin-top: .25rem;
      font-size: 0;
      line-height: 0;
      li {
        position: relative;
        display: inline-block;
        width: 2.55rem;
        text-align: center
        &:nth-child(2n) {
          margin-left: .25rem;
        }
        &:nth-child(n+3) {
          margin-top: .25rem;
        }
        .tits {
          margin-top: .15rem;
          font-size: .2rem;
          line-height: 1;
          color: #fefefe;
        }
        .conts {
          width: 2.55rem;
          border-radius: 5px;
          background-color: #4962ce;
          text-align: center
          padding: .2rem 0 .1rem;
          .pic {
            padding-right: .35rem;
            line-height: .77rem;
            text-align: center;
            text-indent: -.1rem;
            color: #fff;
            font-size: .3rem;
            font-weight: bold;
            background: url(../../images/m20160618/bg-redpacket.png) no-repeat center center;
            background-size: 1.45rem auto;
            small {
              position: absolute;
              margin: .01rem 0 0 .15rem;
              font-weight: normal;
              font-size: .15rem;
            }
          }
          .txt {
            margin-top: .1rem;
            font-size: .2rem;
            line-height: 1.5;
            color: #a6b7ff;
          }
        }
      }
    }
  }
}