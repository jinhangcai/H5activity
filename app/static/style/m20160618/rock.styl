@import "../common.styl";
@import "../address_moudle";

//--------------------------------------------------------【工具代码块】
.viewport{
  overflow hidden
}
//垂直居中
$public-center-vertical =@block{
  position: absolute
  top: 50%
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}

//水平居中
$public-center-horizontally =@block{
  position: absolute
  left: 50%
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
}

//水平垂直居中
$public-center-completely =@block{
  position: absolute
  left: 50%
  top: 50%
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
.no-text {
  text-indent -999999px;
  font-size: 0;
  line-height: 0;
}

#loadPage {
  position fixed;
  z-index 100;
  top 0;
  left 0;
  width 100%;
  height 100%;
  background: url(../../images/loading.gif) no-repeat center center;
  background-size: .39rem auto;
  background-color: rgba(0, 0, 0, 0.8);
}

.pop-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%
  height: 100%;
  background-color rgba(0, 0, 0, .5);
  z-index 4
  .main {
    {$public-center-completely}
      box-sizing: border-box;
      width: 5.55rem;
      padding: .3rem;
      background-color: #fff;
      border-radius: 8px;
      .tit {
        color: #000;
        font-size: .28rem;
        text-align: center
      }
      .tits{
        margin-top .55rem
        color #eb4f74
        font-size .24rem
        padding-bottom .3rem
      }
      .cont {
        margin-top: .25rem;
        font-size: .24rem;
        color: #666;
      }
      .btn-close {
        position: absolute;
        right: .3rem;
        top: .2rem;
        color: #999;
        font-size: .36rem;
        line-height: 1;
        width: .5rem;
        height: .5rem;
        background: url(../../images/m20160618/btn-close.png) no-repeat center center;
        background-size: .2rem auto;
      }
  }
}

body {
  background: url(../../images/m20160618/rock-day.jpg) repeat 0 0;
  padding-bottom: .9rem;
  line-height: 1.5;
}

.header {
  position: relative
  height: 4.03rem;
  background: url(../../images/m20160618/rock-hd.jpg) no-repeat 0 -1px;
  background-size: 6.4rem auto;
  .back-btn {
