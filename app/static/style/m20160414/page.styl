@import "../common.styl";
@import "../address_moudle";
.viewport{
  background #55b9a0
}
  //弹窗
$tiack=@block{
  display none
  position absolute
  z-index 3
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(0,0,0,0.4)
  .tool-in{
     width 4.83rem
     height 6.53rem
     border 3px solid #0b354e
     border-radius .2rem
     margin 0 auto
     background #fff
     position relative
     overflow hidden
  }
}
  //标题
$title=@block{
   width 2.6rem
   height .97rem
   margin 0 auto
   position absolute
   left 1.76rem
   top -.33rem
   img{
      width 100%
   }
}
// p标签introduce
$ppsint=@block{
  text-align: center
  color #2a6d71
  line-height .35rem
  font-size .18rem

}
// p标签invest
$invest=@block{
  text-align: center
  color #2a6d71
  line-height .45rem
  font-size .18rem

}
//li
$lis=@block{
  width 2.55rem
  height 1.93rem
  float: left
  margin-top .05rem
  &:nth-child(even){
    margin-right .25rem
  }
  .prize-item{
    box-sizing border-box
    border-radius .2rem
    border 1px solid #0b354e
    width 100%
    height 1.45rem
    .introduce{
      {$ppsint}
      line-height .22rem
    }
  }
  .invest{
    {$invest}
  }
  img{
    width 100%
  }
}

$color=@block{
  color #2a6d71
  font-size .24rem
  margin 0 auto
  line-height .35rem
}
.banner{
  width 100%
  img{
    width 100%
  }
}
.between{
  width 6.16rem
  margin 0 auto
  .investin{
    width 100%
    height 10.38rem
    background url("../../images/m20160414/frame.png") no-repeat 0 0
    background-size 100%
    position relative
    .title{
      {$title}
    }

    .referral{
      {$color}
      width 5.7rem
      padding .72rem 0 .2rem 0
    }
    .theinvest{
      display none
      width 5.5rem
      height .4rem
      background #fff
      text-align center
      {$color}
      line-height .4rem
      span{
        color #fe5c5d
      }
    }
    .prize{
      width 5.43rem
      margin 0 auto
      overflow hidden
      ul{
        overflow hidden
      }
      li{
        {$lis}
      }
      .prize-intop{
        width 2.92rem
        height 1.93rem
        margin .3rem 0 0 1.26rem
      }
    }
    .bandit{
      background url("../../images/m20160414/frame1.png") no-repeat 0 0
      height 7.59rem
      background-size 100%
      position relative
      margin-top 1.1rem
      .title{
        {$title}
        padding-top .03rem
        line-height .4rem
      }
      .title-in2{
        width 2.9rem
        height 1.07rem
      }
      .priztop{
        padding-top .88rem
      }
      .ganme{
        width 5.43rem
        margin 0 auto
        padding-top .24rem
        color #2a6d71
        font-size .24rem
        ol{
          padding-top .12rem
          li{
            font-size .22rem
            color #2a6d71
            line-height .3rem
            a{
              color #0b354e
              text-decoration underline
            }
            span{
              color #fe5c5d
            }
          }
        }
      }
      .band-tiger{
        width 100%
        position relative
        .banditin{
          background url("../../images/m20160414/slot.png") no-repeat 0 0
          width 100%
          height 3.82rem
          background-size 100%
          .buttom{
            width 2.24rem
            height .78rem
            border-radius .35rem
            border 1px solid #205559
            position absolute
            top 2.94rem
            left 1.66rem
            background url("../../images/m20160414/band-bgbuttom.jpg") no-repeat 0 0
            background-size 100%
            .btn{
              display block
              width 2.11rem
              height .83rem
              background #fe5c5d
              text-align center
              line-height .83rem
              color #fff
              font-size .3rem
              margin -.1rem auto

              border-radius .35rem
              box-shadow 0px -8px 1px #dd3e3f inset
            }
          }
          .number{
            display none
            position absolute
            left .23rem
            top .3rem
            font-size .21rem
            color #fff
            span{
              font-size .32rem
              color #ffdb33
            }
          }
          .winning{
            display none
            position absolute
            right .3rem
            top .4rem
            font-size .21rem
            color #fff
            text-decoration underline
          }
          .band-border{
            width 4.94rem
            height 1.9rem
            margin 0 auto
            border .08rem solid #3b888c
            border-radius .2rem
            position absolute
            top .72rem
            left .17rem
            .band-bg{
              width 1.57rem
              height 1.81rem
              float left
              margin .05rem .05rem 0 0
              border-radius .2rem
              background url("../../images/m20160414/bgchange.jpg") no-repeat 0 0
            }
            .band-bgleft{
              margin-left .05rem
            }
            .band-bgright{
              margin-left 0
            }
            .num{
              width 1.57rem
              height 1.81rem
              background url("../../images/m20160414/slotname.png") top center repeat-y
              background-size 100%
            }
          }
        }
        .lottery{
          width 100%
          background #256468
          height .44rem
          border-bottom-right-radius .2rem
          border-bottom-left-radius .2rem
          overflow hidden
          margin-top -1px
          .lotteryulin{
             transform: translateY(0rem);
          }
          ul{
            li{
              font-size .18rem
              color #fff
              text-align center
              height .44rem
              line-height .44rem
              margin 0 auto
              width 100%
            }
            .add{
              transition all 3s
              opacity 0
              padding-left 3rem
            }
          }
        }
      }
    }
    .rates{
      background url("../../images/m20160414/frame2.png") no-repeat 0 0
      height 3.9rem
      background-size 100%
      position relative
      margin-top 0.6rem
      ol{
        padding-top .77rem
        li{
          padding-bottom .25rem
          margin 0 auto
          width 5.5rem
          color #2a6d71
          font-size .22rem
          span{
            color #fe5c5d
          }
        }
        .in3-lis{
          color #559195
        }
      }
    }
    .activity{
      width 2.34rem
      height .54rem
      border-radius .2rem
      text-align center
      line-height .54rem
      color #fff
      font-size .24rem
      margin .27rem auto 1.2rem
      background #2a6d71
      margin-bottom 1.37rem
    }
    .d-bottom{
      width 2.34rem
      height .34rem
    }
  }
}
.address{
  display none
  width 100%
  background url("../../images/m20160414/address.png") no-repeat 0 0
  background-size 100%
  height .8rem
  line-height .8rem
  color #2a6d71
  font-size .24rem
  position fixed
  bottom 0
  left 0
  text-align center
  z-index 2
}
.poker{
  {$tiack}
  background-color rgba(0,0,0,0.8)
  div{
    img{
      width 3.82rem
      height 2.98rem
      position absolute
      right 0
      top 0
    }
  }
}
.tool{
  {$tiack}
  .tool-in{
    transform: translateY(-50%);
    -webkit-transform translateY(-50%)
    top 50%
    overflow hidden
    .state{
      position absolute
      width 2.71rem
      height .34rem
      left 1.07rem
      top .58rem
    }
    .close-in{
      width 1rem
      height 1rem
      position absolute
      right 0
      top 0
    }
    .close{
      width .29rem
      height .28rem
      position absolute
      right .2rem
      top .2rem
    }
    ol{
      padding-top 1.39rem
      width 4.48rem
      margin 0 auto
      border-radius .2rem
      li{
        width 100%
        line-height .44rem
        color #296d70
        font-size .22rem
        border-radius .2rem

      }
    }
  }
}
.nolast{
  {$tiack}
  .tool-in{
    height 3.23rem
    transform: translateY(-50%);
    -webkit-transform translateY(-50%)
    top 50%
    overflow hidden
  }
  h3{
    font-size .3rem
    color #2a6d71
    text-align center
    padding-top .64rem
  }
  p{
    padding-top .25rem
    text-align center
    color #559195
    font-size .24rem
  }
  a{
    width 2.1rem
    height .74rem
    text-align center
    line-height .74rem
    color #2a6d71
    font-size .24rem
    border-radius .2rem
    border 2px solid #0b354e
    margin 0 auto
    display block
    margin-top .5rem
  }
}
.redpacket{
  {$tiack}
  .tool-in{
    height 3.29rem
    transform: translateY(-50%);
    -webkit-transform translateY(-50%)
    top 50%
    overflow hidden
  }
  h3{
    font-size .3rem
    color #2a6d71
    text-align center
    padding-top .64rem
    span{
      color #ff5c5d
    }
  }
  p{
    padding-top .25rem
    text-align center
    color #559195
    font-size .24rem
  }
  a{
    width 2.1rem
    height .74rem
    text-align center
    line-height .74rem
    color #2a6d71
    font-size .24rem
    border-radius .2rem
    border 2px solid #0b354e
    margin 0 auto
    display block
    margin-top .5rem
  }
}
.draw{
  {$tiack}
  .tool-in{
    height auto
    transform: translateY(-50%);
    -webkit-transform translateY(-50%)
    top 50%
    overflow hidden
  }
  .notes{
    position absolute
    width 2.71rem
    height .36rem
    left 1.07rem
    top .58rem
  }
  .close-in{
    width 1rem
    height 1rem
    position absolute
    right 0
    top 0
    .close{
      width .29rem
      height .28rem
      position absolute
      right .2rem
      top .2rem
    }
  }

  .btntitle{
    width 4.39rem
    height .43rem
    margin 0 auto
    margin-top 1.3rem
    background #dff4ef
    span{
      display block
      float: left
      text-align center
      width 50%
      font-size .22rem
      color #296d70
      line-height .43rem
    }
  }
  .nobb{
    display none
    font-size .3rem
    color #2a6d71
    padding-top .88rem
    text-align center
    padding-bottom 1.34rem
  }
  ol{
    padding .37rem 0 .2rem 0
    max-height 3.53rem
    overflow scroll
    li{
      width 4.39rem
      margin 0 auto
      padding-bottom .26rem
      overflow hidden
      span{
        display block
        float: left
        text-align center
        width 50%
        font-size .22rem
        color #296d70
        line-height .22rem
      }
    }
  }
}
