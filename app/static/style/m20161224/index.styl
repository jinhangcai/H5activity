.viewport{
  background #1ba086
  padding-bottom .5rem
}
.banner{
  width 100%
  img{
    width 100%
  }
}
.main{
  width 6rem
  position relative
  margin 0 auto
  &:before{
    content ''
    background url(../../images/m20161224/index/line1.jpg) repeat;
    position absolute
    left 0
    top 0
    width .24rem
    background-size 100%
    height 100%
  }
  &:after{
    content ''
    background url(../../images/m20161224/index/line1.jpg) repeat;
    position absolute
    right 0
    top 0
    width .24rem
    background-size 100%
    height 100%
  }
  .shop{
    padding-top .49rem
    position relative
    {$hs}
  }
  .line-bom{
    background url(../../images/m20161224/index/line2.jpg) repeat;
    width 5.4rem
    background-size auto 100%
    margin 0 auto
    height .24rem
  }
}
.bottom{
  width 5.8rem
  margin 0 auto
  h2{
    font-size .24rem
    color #fff
    padding .38rem 0 .17rem 0
  }
  ol{
    li{
      color #fff
      font-size .24rem
      line-height .3rem
      padding-bottom .2rem
    }
  }
}
.mask{
  position fixed
  z-index 10
  top 0
  left 0
  width 100%
  height 100%
  background-color: rgba(0,0,0,0.7)
  .pop{
    box-sizing: border-box;
    position: absolute;
    left: 50%;
    top: 50%
    background url(../../images/m20161224/index/line12.png) repeat;
    -webkit-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    width: 4.2rem;
    border-radius .3rem
    .titles{
      padding-top 1.08rem
      text-align center
      font-size .3rem
      color #000
      width 3.17rem
      margin 0 auto
    }
    .titles1{
      padding-top .4rem
      text-align center
      font-size .3rem
      color #2f0101
    }
    .content{
      width 3.5rem
      margin 0 auto
      .shopImg{
        width 100%
        padding-top .4rem
      }
      .red{
        width 2.5rem
        height 1.3rem
        background url(../../images/m20161224/index/redbom1.png)  no-repeat 0 0
        background-size 100%
        margin 0 auto
        text-align center
        line-height 1.3rem
        margin-top .47rem
        p{
          text-align center
          margin 0 auto
          font-size .58rem
          color #fff
          line-height 1.2rem
          span{
            font-size .26rem
            color #fff
          }
        }
      }
      .send{
        color #999999
        font-size .22rem
        text-align center
        padding-top .3rem
        margin 0 auto
      }
    }
    .btn{
      width 1.88rem
      height .53rem
      border-radius .35rem
      border 2px solid #f73234
      text-align center
      line-height .53rem
      display block
      margin: .82rem auto
      color #f73234
      font-size .3rem
    }
    .btn1{
      margin .65rem auto 0
    }
  }
  .pop-cen{
    background #f5f5f5
    width 3.98rem
    background #fff
    border-radius .3rem
    margin: 0.12rem auto .12rem
    padding-bottom: 1rem;
    position relative
    .happyday{
      position absolute
      right -.4rem
      bottom -.1rem
      width 3.16rem
      height 2.05rem
    }
    .snow1{
      width .36rem
      height .42rem
      position absolute
      left -.8rem
      top .8rem
    }
    .snow2{
      width .63rem
      height .72rem
      position absolute
      right -.8rem
      top -.8rem
    }
    .round{
      width .15rem
      height .15rem
      border-radius 50%
      background #fff
      position absolute
      right -.6rem
      top 1rem
    }
  }
  .pop-cen1{
    padding-bottom: .4rem;
    background #f5f5f5
  }
}
.poker{
  position fixed
  z-index 10
  top 0
  left 0
  width 100%
  height 100%
  background-color: rgba(0,0,0,0.7)
  img{
    position absolute
    right 0
    top 0
    width 3.32rem
    height 2.79rem
  }
}